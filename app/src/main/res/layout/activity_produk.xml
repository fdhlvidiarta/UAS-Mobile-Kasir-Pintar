<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProdukActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="402dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="38dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="126dp"
            android:layout_marginBottom="9dp"
            android:layout_toStartOf="@+id/HeaderProfil"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/HeaderProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="177dp"
            android:layout_marginBottom="14dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Produk"
            android:textColor="@color/material_dynamic_neutral30"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="365dp"
        android:layout_height="334dp"
        android:layout_marginTop="48dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/product_1" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/imageTabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/semu"
        app:layout_constraintBottom_toTopOf="@+id/productName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="Image tab layout"
        app:layout_constraintTop_toBottomOf="@+id/productImage" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="360dp"
        android:layout_height="41dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="start"
        android:text="Motherboard Asus B150M Pro"
        android:textAlignment="viewStart"
        android:textColor="@color/myPrimaryColor"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productImage" />

    <TextView
        android:id="@+id/productType"
        android:layout_width="371dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:text="Elektronik"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productName" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:text="Rp. 2.430.000,00"
        android:textAlignment="viewStart"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productType" />

    <TextView
        android:id="@+id/productDescription"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:gravity="start"
        android:text="ASUS B150M PRO GAMING: Motherboard M-ATX untuk Performa Gaming Optimal Motherboard ASUS B150M PRO GAMING adalah pilihan tepat bagi Anda yang ingin membangun PC gaming dengan ukuran mini-ATX (mATX) yang ringkas namun bertenaga. Motherboard ini menggunakan chipset Intel B150 dan kompatibel dengan prosesor Intel Core i7, i5, dan i3 generasi ke-6 Socket LGA1151."
        android:textAlignment="viewStart"
        android:textColor="@color/material_dynamic_neutral50"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productPrice" />

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tambahkan ke Keranjang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDescription" />

    <RelativeLayout
        android:id="@+id/Bootom"
        android:layout_width="402dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="780dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="316dp"
            android:background="@drawable/homeungu"
            android:contentDescription="Home button"
            android:padding="8dp"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/cartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="136dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/cartblack"
            android:padding="8dp"
            android:contentDescription="Keranjang button"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/notifButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="226dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="141dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/bell"
            android:padding="8dp"
            android:contentDescription="Notif button"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/humbergerrButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="322dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/vector"
            android:padding="8dp"
            android:contentDescription="menu button"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>